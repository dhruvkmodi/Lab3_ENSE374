<h1>To do list</h1>
<div id="container">
  <div id="accordion">
    <div class="card">
      <div class="card-header">
        <a class="card-link" data-toggle="collapse" href="#collapseOne">
          Login
        </a>
      </div>
      <div id="collapseOne" class="collapse show" data-parent="#accordion">
<div class="form-popup" id="myFormLogin">
    <form action="/login" method = "POST" class="form-container" >
      <label for="email"><b>Email</b></label>
      <input type="text" placeholder="Enter Email" name="email" required>
  
      <label for="psw"><b>Password</b></label>
      <input type="password" placeholder="Enter Password" name="psw" required>
  
      <button type="submit" class="btn">Login</button>
    </form>
  </div>
</div>
</div>
<div class="card">
  <div class="card-header">
  <a class="card-link" data-toggle="collapse" href="#collapseTwo">
    Signup 
  </a>
</div>
<div id="collapseTwo" class="collapse show" data-parent="#accordion">
<div class="form-popup" id="myFormSignup">
  <form action = "/register" method = "POST" class="form-container">
    <label for="email"><b>Email</b></label>
    <input type="text" placeholder="Enter Email" name="email" required>

    <label for="psw"><b>Password</b></label>
    <input type="password" placeholder="Enter Password" name="psw" required>

    <label for="authentication"><b>Authentication</b></label>
    <input type="text" placeholder="authentication" name="authentication" required>

    <button type="submit" class="btn">Signup</button>
  </form>
</div>
</div>
</div>
</div>
</div>




